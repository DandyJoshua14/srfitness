
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to blog posts
    match /blogPosts/{postId} {
      allow read: if true;
      // Secure write access - only allow authenticated admins in a real app
      // For this demo, we are keeping it open for the admin panel to work without auth.
      // In production, you MUST restrict this. e.g., allow write: if request.auth.uid != null;
      allow write: if true; 
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
